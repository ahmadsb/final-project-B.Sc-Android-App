<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutPractice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".PracticeActivity"
    android:background="#F0F0E8">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:popupTheme="@style/AppTheme"
        android:id="@+id/toolbar_learn_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#001967"
        app:theme="@style/ThemeOverlay.AppCompat"
        >

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:textColor="#00A2F3"
                        android:textStyle="bold"
                        android:textSize="30dp"
                        android:fontFamily="casual"
                        android:shadowRadius="20"
                        android:text="@string/exercice" />


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"


                        >
                        <LinearLayout
                            android:id="@+id/mdotLayout"
                            android:layout_gravity="top"
                            android:gravity="center|top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/viewPager"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>

                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:orientation="vertical"-->
                        <!--&gt;-->
                        <!--<HorizontalScrollView-->
                        <!--android:id="@+id/navContainer"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerHorizontal="true"-->
                        <!--android:paddingBottom="5dp"-->
                        <!--android:paddingTop="5dp"-->
                        <!--android:scrollbars="none"-->
                        <!--android:visibility="invisible">-->

                        <!--<com.library.NavigationBar-->
                        <!--android:id="@+id/navBar"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="56dp"-->
                        <!--android:padding="6dp"-->
                        <!--app:central_line_height="1dp"-->
                        <!--app:enable_border="true"-->
                        <!--app:only_border="true"-->
                        <!--app:tab_padding="48dp"-->
                        <!--app:tab_strok_width="3dp"-->
                        <!--app:tab_text_size="18sp"-->
                        <!--/>-->

                        <!--</HorizontalScrollView>-->

                        <TextView
                            android:layout_margin="10sp"
                            android:id="@+id/tv_query"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="casual"
                            />
                    </LinearLayout>
                <com.hitomi.cmlibrary.CircleMenu
                    android:id="@+id/circle_menu"
                    android:layout_width="300sp"
                    android:layout_height="300sp"
                    android:layout_marginLeft="200sp"
                    android:layout_gravity="right"
                    />

                <!--</LinearLayout>-->


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15sp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/button_answer"
                    ></View>
                <Button
                    android:layout_margin="10sp"
                    android:id="@+id/btn_RSLT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"

                    android:background="@drawable/button_answer"
                    >

                </Button>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/button_answer"
                    ></View>
                <LinearLayout
                    android:layout_marginTop="1sp"
                    android:layout_width="match_parent"
                    android:layout_height="75sp"
                    android:orientation="horizontal"
                    android:gravity="center"

                    >
                    <Button
                        android:layout_margin="5sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/btn_opt1"
                        android:background="@drawable/shape_radious"
                        />

                    <Button
                        android:layout_margin="5sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/btn_opt2"
                        android:background="@drawable/shape_radious"

                        />

                    <Button
                        android:layout_margin="5sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/btn_opt3"
                        android:background="@drawable/shape_radious"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75sp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <Button
                        android:layout_margin="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/btn_opt4"
                        android:background="@drawable/shape_radious"

                        />

                    <Button
                        android:layout_margin="5sp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/btn_opt5"
                        android:background="@drawable/shape_radious"


                        />

                    <Button
                        android:layout_margin="5sp"

                        android:id="@+id/btn_opt6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/shape_radious"

                        />
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_check"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_circle"
                android:text="@string/btn_check"

                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
