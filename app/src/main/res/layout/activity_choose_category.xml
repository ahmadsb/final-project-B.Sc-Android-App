<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".chooseLevel.ChooseCategoryActivity">



    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:layout_weight="1"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:background="#001967"
                >
            </android.support.v7.widget.Toolbar>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/id_profile"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/user"
                app:civ_border_width="2dp"
                app:civ_border_color="#fff"
                android:layout_marginTop="10sp"
                android:layout_gravity="right"
                android:layout_marginRight="15sp"/>
        </FrameLayout>

        <VideoView
            android:layout_weight="1"
            android:id="@+id/simpleVideoView"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:background="@drawable/imagevideo"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="8sp"


            >

        </VideoView>

        <TextView
            android:layout_weight="1"
            android:id="@+id/moveText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:textColor="#fff"
            android:ellipsize="marquee"
            android:textSize="20sp"
            android:gravity="center"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_marginBottom="15sp"
            />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20sp"
            android:layout_margin="5sp"
            >
            <ImageView
                android:id="@+id/button_category_beginners"
                android:layout_width="40sp"
                android:layout_height="100sp"
                android:layout_weight="1"
                android:background="@drawable/beginner"
                android:layout_marginRight="15sp"/>

            <ImageView
                android:id="@+id/button_category_students"
                android:layout_width="40sp"
                android:layout_height="100sp"
                android:layout_weight="1"
                android:background="@drawable/student"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp">
            <ImageView
                android:id="@+id/button_category_university"
                android:layout_width="40sp"
                android:layout_height="100sp"
                android:layout_weight="1"
                android:background="@drawable/acadimic"
                android:layout_marginRight="15sp"/>
            <ImageView
                android:id="@+id/button_category_Info"
                android:layout_width="40sp"
                android:layout_height="100sp"
                android:layout_weight="1"
                android:background="@drawable/info"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/buttonshape">

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3751A5"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmad Sabbah"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_developer_mode_black_24dp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:gravity="center"
                android:text="0543596300"
                android:textColor="#fff"
                android:layout_gravity="center"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:gravity="center"
                android:text="ahmadsb1994@gmail.com"
                android:textColor="#fff"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
